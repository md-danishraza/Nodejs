<%- layout("/layout/boilerplate") %>
<div class="row blog">
  <div class="col-md-6 offset-md-3 border shadow-lg py-4 px-4">
    <h1 class="text-center">Add New Blog</h1>
    <form action="/blog" method="post" enctype="multipart/form-data">
      <fieldset class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          required
          class="form-control"
        />
      </fieldset>
      <fieldset class="mb-3">
        <label for="Body" class="form-label">Body</label>
        <textarea
          id="Body"
          name="body"
          required
          class="form-control"
          rows="5"
        ></textarea>
      </fieldset>
      <fieldset class="mb-3">
        <label for="coverImageURL" class="form-label">coverImageURL</label>
        <input
          type="file"
          name="coverImageURL"
          id="coverImageURL"
          class="form-control"
          required
        />
      </fieldset>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>
</div>

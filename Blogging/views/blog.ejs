<%- layout("/layout/boilerplate") %>
<div class="row">
  <div class="col-md-10 offset-md-1">
    <h1 class="text-center"><%= blog.title %></h1>
    <img src="/uploads/<%=blog.coverImageURL%>" alt="" class="img-fluid mt-2" />

    <p class="mt-2"><%= blog.body %></p>
    <div class="mt-3 text-end">
      <img
        src="<%= blog.createdBy.profileImageURL %>"
        alt=""
        width="50px"
        class="img-fluid"
      />
      <h3 class=""><%= blog.createdBy.fullName %></h3>
    </div>

    <div class="form mt-5">
      <% if(comments && comments.length){ %>
      <h4>All Comments (<%= comments.length %>)</h4>

      <% comments.forEach(comment => { %>
      <div class="p-2 border rounded mt-2">
        <p><%= comment.content %></p>
        <p>By <%= comment.createdBy.fullName %></p>
      </div>
      <% }) %> <% } %>
      <h4>Leave a Comment</h4>
      <form action="/blog/<%= blog._id %>/comments" method="post">
        <div class="mb-3">
          <textarea class="form-control" name="content" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
